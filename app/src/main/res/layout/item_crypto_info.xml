<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/oxfordblue">

        <TextView
            android:id="@+id/rankTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/amaranth_bold"
            android:text="#1091"
            android:textColor="@color/gray"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/cryptoNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/amaranth_bold"
            android:text="Crypto Name"
            android:textColor="@color/orange"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/dollarSignTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/currencyIcon"
            android:layout_alignParentStart="false"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/amaranth"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="$"
            android:textColor="@color/timberwolf"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/cryptoPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/dollarSignTv"
            android:layout_alignParentStart="false"
            android:layout_marginStart="85dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/amaranth"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Price"
            android:textColor="@color/timberwolf"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/percentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cryptoPriceTv"
            android:layout_toStartOf="@+id/dollarSignTv"
            android:fontFamily="@font/amaranth"
            android:layout_marginStart="250dp"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="percentage"
            android:textColor="@color/timberwolf"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/symbolTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cryptoNameTextView"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/amaranth"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Symbol"
            android:textColor="@color/timberwolf"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/currencyIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_currency"
            app:tint="@color/orange"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp" />

    </RelativeLayout>
</layout>